<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <nav>
      <%= link_to image_tag("favicon.png", alt: t(".logo"), class: "rails-logo"), root_path %>
      <ul class="nav navbar-nav navbar-right">
        <%= render "products/cart_text" %>
        <%= render "layouts/shim" %>
        <li class="dropdown">
          <% if user_signed_in? %>
          <% if current_user.admin? %>
          <li><%= link_to "Users", '#' %></li>
          <% end %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", edit_user_registration_path %></li>
              <li><%= link_to "Settings", "#" %></li>
              <li class="divider"></li>
              <li>
                <%= link_to('Logout', destroy_user_session_path, method: :delete) %>
              </li>
            </ul>
          </li>
          <% else %>
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <%= t(".login")%> <b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to t(".sign_now"), new_user_registration_path %></li>
            <li><%= link_to t(".login_now"), new_user_session_path %></li>
          <% end %>
          </ul>
        </li>
      </ul>
    </nav>
  </div>
</header>
