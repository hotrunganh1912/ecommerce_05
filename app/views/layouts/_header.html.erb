<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <nav>
      <div class="navbar-header">
        <%= link_to image_tag("favicon.png", alt: t(".logo"),class: "rails-logo"),root_path %>
      </div>

      <% if user_signed_in? %>
        <% if current_user.admin? %>
        <ul class="nav navbar-nav">
          <%= render "layouts/header_admin" %>
        </ul>
        <% end %>

        <ul class="nav navbar-nav navbar-right">
          <%= render "products/cart_text" %>
          <%= render "layouts/shim" %>

          <li class="dropdown">
            <%= render "layouts/header_users" %>
          </li>
        </ul>
      <% else %>
        <ul class="nav navbar-nav navbar-right">
          <%= render "products/cart_text" %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t(".login")%> <b class="caret"></b>
            </a>

            <ul class="dropdown-menu">
              <li><%= link_to t(".sign_now"), new_user_registration_path %></li>
              <li><%= link_to t(".login_now"), new_user_session_path %></li>
            </ul>

          </li>
        </ul>
      <% end %>

    </nav>
  </div>
</header>
