<div class="navbar-form">
  <%= search_form_for @search do |f| %>
  <%= f.label :search %></br>
  <div class="input-group add-on">
    <%= f.text_field :name_cont, class: "form-control", placeholder: "Search Name .." %>
    <div class="input-group-btn">
    <%= f.select(:category_id_in,Category.all.collect {|p| [p.name, p.id]},{include_blank: 'None'},class: "form-control") %>

      <%= button_tag( :class => "btn btn-default") do %>
      <i class="glyphicon glyphicon-search"></i>
      <% end %>
    </div>
  </div>
  <% end %>
</div>
