<div class="col-sm-6 col-lg-4 pd-product-item">
  <div class="card">
    <% if product.in_stock? %>
    <small class="text-success"><b><%= t".in_stock" %></b></small>
    <% else %>
    <small class="text-danger"><b><strike><%= t".out_of_stock" %></b></strike></small>
    <%end %>
    <div class="div-button-card">
      <%= link_to product_path(product) do%>
        <img src= "assets/product/<%= product.name_image%>" alt= <%= product.name_image%>  width="300px" height="170px">
      <% end %>
    </div>
    <h1><%= link_to product.name , product_path(product) %></h1>
    <p class="price"><%= number_to_currency(product.price_out, :locale => :en)%></p>
    <p class="description-long-product" > <%= product.description_long %></p>
    <%= form_for @order_details do |f| %>
    <%= f.hidden_field :quantity, value: 1, class: "form-control", min: 1 %>
    <%= f.hidden_field :product_id, value: product.id %>
    <p><%= f.submit t(".add_to_card"), class: "btn btn-primary" %></p>
    <% end %>
  </div>
</div>
