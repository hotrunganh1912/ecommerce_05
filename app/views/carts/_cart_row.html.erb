<div class="well">
  <div class="row">
    <div class="col-xs-8">
      <h4><%= link_to product.name , product_path(product) %></h4>
      <img src= "../assets/product/<%= product.name_image%>" alt= <%= product.name_image%>, class= "shopping-card">
    </div>
    <div class="col-xs-4">
      <%= form_for order_details, remote: true do |f| %>
      <h4 class="text-right"> <%= t".unit_price"%> <span style="color: green"><%= number_to_currency product.price_out %></span></h4>
      <div class="row">
        <div class="col-xs-4">
          <%= f.number_field :quantity, value: order_details.quantity.to_i, class: "form-control", min: 1 %>
          <%= f.hidden_field :product_id, value: product.id %>
        </div>
        <div class="col-xs-8 text-right">
          <div class="btn-group">
            <%= f.submit  (t".update_quantity") , class: "btn btn-primary" %>
            <%= link_to (t".delete"), order_details, { data: { confirm: (t".confirm_delete") },remote: true,method: :delete, class: "btn-danger" } %>
          </div>
        </div>
      </div>
      <h4 class="text-right"><%= t".total_price"%><span style="color: green"><%= number_to_currency order_details.price %></span></h4>
      <% end %>
    </div>

  </div>
</div>
