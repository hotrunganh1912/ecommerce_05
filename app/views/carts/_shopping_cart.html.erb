<% if !@order_item.nil? && @order_item.errors.any? %>
<div class="alert alert-danger">
  <ul>
    <% @order_item.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>

<% if @order_details.size == 0 %>
<p class="text-center">
  <h1>
   <%= link_to (t".mess"), root_path %>
  </h1>
</p>
<% else %>
  <% @order_details.each do |order_details| %>
    <%= render 'carts/cart_row', product: order_details.product, order_details: order_details, show_total: true %>
  <% end %>
<% end %>
